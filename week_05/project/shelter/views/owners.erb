      <th>Name</th>
      <th></th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Registered</th>
    </tr>
    <% for owner in @owners %>
      <tr>

        <td>
          <a href="/owners/<%= owner.id %>">
            <%= owner.first_name %>
          </a>
        </td>

        <td><%= owner.last_name %></td>
        <td><%= owner.telephone %></td>
