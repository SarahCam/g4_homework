<main>
  <% if @owner_details %>
  <h1>Owner Details</h1>
  <form action="/owners/edit" method="post">
    <table>
      <tr>
        <td>First Name</td>
        <td><input type='text' value="<%= @owner_details.first_name %>" name="first_name"></td>
      </tr>
      <tr>
        <td>Last Name</td>
        <td><input type='text' value="<%= @owner_details.last_name %>" name="last_name"></td>
      </tr>
      <tr>
        <td>Telephone</td>
        <td><input type='text' value="<%= @owner_details.telephone %>" name="telephone"></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><input type='text' value="<%= @owner_details.email %>" name="email"></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><input type='text' value="<%= @owner_details.address %>" name="address"></td>
      </tr>
      <tr>
        <td>Postcode</td>
        <td><input type='text' value="<%= @owner_details.postcode %>" name="postcode"></td>
      </tr>
      <tr>
        <td>Species</td>
        <td><input type='text' value="<%= @owner_details.species %>" name="species"></td>
      </tr>
      <tr>
        <td>Breed</td>
        <td><input type='text' value="<%= @owner_details.breed %>" name="breed"></td>
      </tr>
      <tr>
        <td>Seeking Pet</td>
        <td><input type='text' value="<%= @owner_details.seeks_pet %>" name="seeks_pet"></td>
      </tr>
      <tr>
        <td>Registration Date</td>
        <td><input type='text' value="<%= @owner_details.registration_date %>" name="registration_date"></td>
      </tr>
    </table>
    <input type='hidden' value="<%= @owner_details.id %>" name="id">
    <input type='submit' value="Update Details">
  </form>
  <!-- <form action="/owners/show" method="post">
    <input type='submit' value="Show All Owners">
  </form> -->
  <% end %>
</main>
